<h1>Here are your list of stylists!</h1>
@if (@Model.Count == 0)
{
  <p>There are no added stylists.</p>
}
<ul>
  @foreach (var stylist in @Model)
  {
    <li>
      <a href="/stylists/@stylist.GetId()">@stylist.GetName()</a> |
      <a href="/stylist/edit/@stylist.GetId()">Edit</a>
    </li>
  }
</ul>

<hr>
<h1>Add a new stylist</h1>
<form action="/stylists/new" method="post">
  <label for="stylist-name">Name</label>
  <input name="stylist-name" type="text" id="stylist-name">
  <button type="submit">Add</button>
</form>

<hr>
<a href="/stylists/deleteAll">Delete all stylists</a>
<p><a href="/">Return Home</a></p>
